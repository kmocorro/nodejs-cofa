<!DOCTYPE html>
<html>
<head>
<title>Barcode</title>
<link rel="stylesheet" type="text/css" href="../style/style.css">
<link rel="stylesheet" type="text/css" href="../style/font-awesome.css">
<link rel="stylesheet" type="text/css" href="../style/bootstrap-datetimepicker.css">
<link rel="stylesheet" type="text/css" href="../src/bootstrap/css/bootstrap.min.css">
<script type="text/javascript" src="../src/popper/popper.min.js"></script>
<script type="text/javascript" src="../src/jquery/jquery.min.js"></script>
<script type="text/javascript" src="../src/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript" src="../js/validation.min.js"></script>
<script type="text/javascript" src="../js/verifyBarcode.js"></script>
</head>

<body>
    <div class="container">
        <div class="wrapper">

            <form action="" method="post" id="barcode_form" name="barcode_form" class="form-upload">
                <h3>LINE <%= line %></h3>
                <hr class="colorgraph">
                <div class="header_div" style="padding-bottom:10px;">
                    <div class="liner">
                        <input type="text" class="form-control" id="line" name="line" value='<%= line %>'/>
                    </div>
                    <div class="lot_id_div">
                        <!--onkeypress='return event.charCode >= 48 && event.charCode <= 57'-->
                        <h5>Lot ID:</h5> 
                        <input type="text" class="form-control" id="lot_id" name="lot_id" autofocus placeholder="Wafer Lot ID"/>
                    </div>
                    <div class="qty_div" style="padding-bottom:10px;">
                        <h5>Quantity:</h5> 
                        <input type="text" class="form-control" id="qty" name="qty" onkeypress='return event.charCode >= 48 && event.charCode <= 57' placeholder="Lot size"/>
                    </div>
                    
                    <div id="error">
                        <!-- error / success will be shown here -->
                    </div>

                    <div class="stacks">
                        <div class="stackOf5">
                            <h5>Scan 5 stack IDs</h5>
                            <input type="text" class="form-control" id="stack5_id1" name="stack5_id1"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack5_id2" name="stack5_id2"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack5_id3" name="stack5_id3"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack5_id4" name="stack5_id4"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack5_id5" name="stack5_id5"  placeholder="Stack ID"/>
                        </div>
                        <div class="stackOf4">
                            <h5>Scan 4 stack IDs</h5>
                            <input type="text" class="form-control" id="stack4_id1" name="stack4_id1"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack4_id2" name="stack4_id2"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack4_id3" name="stack4_id3"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack4_id4" name="stack4_id4"  placeholder="Stack ID"/>
                        </div>
                        <div class="stackOf3">
                            <h5>Scan 3 stack IDs</h5>
                            <input type="text" class="form-control" id="stack3_id1" name="stack3_id1"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack3_id2" name="stack3_id2"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack3_id3" name="stack3_id3"  placeholder="Stack ID"/>
                        </div>
                        <div class="stackOf2">
                            <h5>Scan 2 stack IDs</h5>
                            <input type="text" class="form-control" id="stack2_id1" name="stack2_id1"  placeholder="Stack ID"/>
                            <input type="text" class="form-control" id="stack2_id2" name="stack2_id2"  placeholder="Stack ID"/>
                        </div>
                        <div class="stackOf1">
                            <h5>Scan 1 stack ID</h5>
                            <input type="text" class="form-control" id="stack1_id1" name="stack1_id1"  placeholder="Stack ID"/>
                        </div>
                    </div>
                    
                </div>
                <hr>
                <div class="submit_div" style="padding-bottom: 20px;">
                    <button id="btn-barcode" class="btn btn-lg btn-primary btn-block" name="Submit" type="Submit" value="Save">Save</button>
                </div>
            </form>

        </div>
    </div>

</body>
<script type="text/javascript"> // tabber
    $('#lot_id').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#qty').focus();
            return false; // block form from being submitted yet
        }
    });

    //  stack 5
    $('#stack5_id1').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack5_id2').focus();
            return false; // block form from being submitted yet
        }
    });

    $('#stack5_id2').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack5_id3').focus();
            return false; // block form from being submitted yet
        }
    });

    $('#stack5_id3').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack5_id4').focus();
            return false; // block form from being submitted yet
        }
    });

    $('#stack5_id4').keydown(function(e){
        if (e.keyCode == 13) {
            $('#stack5_id5').focus();
            return false; // block form from being submitted yet
        }
    });

    // stack 4
    $('#stack4_id1').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack4_id2').focus();
            return false; // block form from being submitted yet
        }
    });

    $('#stack4_id2').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack4_id3').focus();
            return false; // block form from being submitted yet
        }
    });

    $('#stack4_id3').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack4_id4').focus();
            return false; // block form from being submitted yet
        }
    });

    // stack 3
    $('#stack3_id1').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack3_id2').focus();
            return false; // block form from being submitted yet
        }
    });

    $('#stack3_id2').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack3_id3').focus();
            return false; // block form from being submitted yet
        }
    });

    // stack 2
    $('#stack2_id1').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
            $('#stack2_id2').focus();
            return false; // block form from being submitted yet
        }
    });

    // stack 1
    $('#stack1_id1').keydown(function(e){
        if (e.keyCode == 13) { // barcode scanned!
        }
    });
</script>
</html>